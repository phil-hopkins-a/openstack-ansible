        --os-token $token_id --os-url http://$CONTROLLER_PUBLIC_ADDRESS:5000/v3 --os-identity-api-version 3


#
# Image service
#

openstack user create glance \
          --password {{ glance_pass }} \
          --project service

openstack role add --user glance \
                   --project service \
                   admin
                   
openstack service create --name glance \
                        --description "Glance Image Service" image

openstack endpoint create glance admin "http://$CONTROLLER_PUBLIC_ADDRESS:9292" --region RegionOne \
        --os-token $token_id --os-url http://$CONTROLLER_PUBLIC_ADDRESS:5000/v3 --os-identity-api-version 3
openstack endpoint create glance public "http://$CONTROLLER_PUBLIC_ADDRESS:9292"  --region RegionOne \
