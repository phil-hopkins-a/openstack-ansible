#
# Create a project
#
openstack project create {{ admin_tenant }} \
          --description "Admin Project"

openstack user create {{ admin_tenant_user }} \
          --password {{ admin_pass }} \
          --project {{ admin_tenant }}

openstack role add --user {{ admin_tenant_user }} \
                   --project {{ admin_tenant }} \
                   admin 

openstack role create _member_

openstack user create {{ nonadmin_tenant_user }} \
          --password {{ admin_pass }} \
          --project {{ admin_tenant }}

openstack role add --user {{ nonadmin_tenant_user }} \
                   --project {{ admin_tenant }} \
                   _member_


openstack project create service \
          --description "Services" 

# Nova service
#
openstack user create nova \
          --password {{ nova_pass }} \
          --project service

openstack role add --user nova \
                   --project service \
                   admin 
          
openstack service create --name nova \
                        --description "Nova Compute Service" compute

openstack endpoint create nova admin "http://$CONTROLLER_PUBLIC_ADDRESS:8774/v2/\$(tenant_id)s" --region RegionOne \
        --os-token $token_id --os-url http://$CONTROLLER_PUBLIC_ADDRESS:5000/v3 --os-identity-api-version 3
openstack endpoint create nova public "http://$CONTROLLER_PUBLIC_ADDRESS:8774/v2/\$(tenant_id)s"  --region RegionOne \
        --os-token $token_id --os-url http://$CONTROLLER_PUBLIC_ADDRESS:5000/v3 --os-identity-api-version 3
openstack endpoint create nova internal "http://$CONTROLLER_PUBLIC_ADDRESS:8774/v2/\$(tenant_id)s"  --region RegionOne \
        --os-token $token_id --os-url http://$CONTROLLER_PUBLIC_ADDRESS:5000/v3 --os-identity-api-version 3

#
# Volume service
#

openstack user create cinder \
          --password {{ cinder_pass }} \
          --project service

openstack role add --user cinder \
                   --project service \
                   admin

openstack service create --name cinder \
                        --description "Cinder Volume Service" volume

openstack endpoint create cinder admin "http://$CONTROLLER_PUBLIC_ADDRESS:8776/v1/\$(tenant_id)s" --region RegionOne \
        --os-token $token_id --os-url http://$CONTROLLER_PUBLIC_ADDRESS:5000/v3 --os-identity-api-version 3
openstack endpoint create cinder public "http://$CONTROLLER_PUBLIC_ADDRESS:8776/v1/\$(tenant_id)s"  --region RegionOne \
        --os-token $token_id --os-url http://$CONTROLLER_PUBLIC_ADDRESS:5000/v3 --os-identity-api-version 3
