        --os-token $token_id --os-url http://$CONTROLLER_PUBLIC_ADDRESS:5000/v3 --os-identity-api-version 3

#
# Swift service
#

openstack user create swift \
          --password {{ nova_pass }} \
          --project service

openstack role add --user swift \
                   --project service \
                   admin

openstack service create --name swift \
                        --description "Swift Service" "object-store"

openstack endpoint create swift admin "http://$CONTROLLER_ADMIN_ADDRESS:8888/v1" --region RegionOne \
        --os-token $token_id --os-url http://$CONTROLLER_PUBLIC_ADDRESS:5000/v3 --os-identity-api-version 3
openstack endpoint create swift public "http://$CONTROLLER_PUBLIC_ADDRESS:8888/v1/AUTH_\$(tenant_id)s"  --region RegionOne \
